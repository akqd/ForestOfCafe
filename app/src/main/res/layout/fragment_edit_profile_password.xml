<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 비밀번호를 입력해주세요."
        android:textColor="@color/colorBrown"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호 :"
        android:textColor="@color/colorBrown"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/text1"
        app:layout_constraintTop_toTopOf="@id/etd_edit_pw"
        app:layout_constraintBottom_toBottomOf="@id/etd_edit_pw"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인 :"
        android:textColor="@color/colorBrown"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/text1"
        app:layout_constraintTop_toTopOf="@id/etd_edit_pwcheck"
        app:layout_constraintBottom_toBottomOf="@id/etd_edit_pwcheck"
        />
    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/etd_edit_pw"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text2"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:ems="12"
        android:backgroundTint="@color/colorBrown"
        android:password="true"
        android:maxLength="12"
        android:textSize="15sp"
        android:textColor="@color/colorBrown"
        />
    <EditText
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text3"
        app:layout_constraintTop_toBottomOf="@id/etd_edit_pw"
        android:ems="12"
        android:backgroundTint="@color/colorBrown"
        android:password="true"
        android:maxLength="12"
        android:textSize="15sp"
        android:textColor="@color/colorBrown"
        android:id="@+id/etd_edit_pwcheck"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 비밀번호는 8 ~ 32자의 영문 대소문자, 숫자, 특수문자를 조합
        하여 설정해주세요."
        android:textColor="@color/colorWeakBrown"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/text3"
        />
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 다른사이트에서 사용하는 것과 동일하거나 쉬운 비밀번호는
        사용하지 마세요."
        android:textColor="@color/colorWeakBrown"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/text4"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 안정한 계정 사용을 위해 비밀번호는 주기적으로 변경해주세요."
        android:textColor="@color/colorWeakBrown"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/text5"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_edit_pw_ok"
        android:background="@drawable/button_border"
        android:textColor="@color/colorIvory"
        android:textStyle="bold"
        android:text="비밀번호 변경"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>