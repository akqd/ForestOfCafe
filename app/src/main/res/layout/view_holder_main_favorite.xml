<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >

    <!-- 메인화면 - 즐겨찾는 카페 화면 블록-->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:id="@+id/cafe_image"
        app:layout_constraintBottom_toTopOf="@id/cafe_name"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/cafe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카페이름"
        android:textColor="@color/colorBrownAlpha"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cafe_image"
        app:layout_constraintLeft_toLeftOf="@id/cafe_image"
        />

    <TextView
        android:id="@+id/cafe_notice"
        android:text="카페공지"
        android:textStyle="bold"
        android:textColor="@color/colorBrownAlpha"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/cafe_image"
        app:layout_constraintLeft_toRightOf="@id/cafe_image"
        />


    <TextView
        android:id="@+id/cafe_open"
        android:text="운영여부"
        android:textSize="18sp"
        android:textColor="@color/colorBrown"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cafe_image"
        />
</androidx.constraintlayout.widget.ConstraintLayout>