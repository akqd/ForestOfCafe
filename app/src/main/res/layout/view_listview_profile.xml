<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_search"
        android:id="@+id/imgv_profile_menu"
        android:tint="@color/colorBrown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tv_profile_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorBrown"
        app:layout_constraintLeft_toRightOf="@+id/imgv_profile_menu"
        app:layout_constraintTop_toTopOf="@id/imgv_profile_menu"
        app:layout_constraintBottom_toBottomOf="@id/imgv_profile_menu"
        android:text=""
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>